# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /price                           controllers.Application.index()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# ClientSettings operations
GET     /clients                                        controllers.ClientSettingsController.getClientSettings()
GET     /clients/:id                                    controllers.ClientSettingsController.getClientSetting(id)
POST    /clients                                        controllers.ClientSettingsController.createClientSettings()
PUT     /clients/:id                                    controllers.ClientSettingsController.updateClientSettings(id)
DELETE  /clients/:id                                    controllers.ClientSettingsController.deleteClientSettings(id)

# ProductEntry operations
GET     /clients/:id/groups/:groupId/categories/:categoryId/products                controllers.ProductController.getProducts(id, groupId: Long,  categoryId)
PUT     /clients/:id/groups/:groupId/categories/:categoryId/products/:productId     controllers.ProductController.updateProduct(id, groupId: Long, categoryId, productId, checked: java.lang.Boolean )
PUT     /clients/:id/groups/:groupId/categories/:categoryId/products                controllers.ProductController.updateProducts(id, groupId: Long, categoryId, checked: java.lang.Boolean)

# Category operations
GET     /clients/:id/categories                          controllers.CategoryController.getCategories(id)

# PriceList operations
GET    /client/:id/groups/:groupId/formats/:format/pricelist              controllers.PriceListController.getPriceList( id, groupId:Long, format )
POST   /client/:id/groups/:groupId/formats/:format/pricelist              controllers.PriceListController.refreshPriceList( id, groupId:Long, format )
GET    /client/:id/formats                                              controllers.PriceListController.getPriceListFormats( id )

# group operations
GET    /clients/:id/groups                                               controllers.GroupController.getGroups( id )
POST   /clients/:id/groups                                               controllers.GroupController.addGroup( id )

POST /authentication                                                    controllers.LoginController.authentication()
