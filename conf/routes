# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index()
GET     /price                              controllers.Application.price()
GET     /download                           controllers.Application.download()
GET     /groupmanager                           controllers.Application.groupmanager()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# ClientSettings operations
GET     /clients                                        controllers.ClientSettingsController.getClientSettings()
GET     /clients/:id                                    controllers.ClientSettingsController.getClientSetting(id)
POST    /clients                                        controllers.ClientSettingsController.createClientSettings()
PUT     /clients/:id                                    controllers.ClientSettingsController.updateClientSettings(id)
DELETE  /clients/:id                                    controllers.ClientSettingsController.deleteClientSettings(id)

# ProductEntry operations
GET     /clients/:id/sites/:siteId/categories/:categoryId/products                controllers.ProductController.getProducts(id, siteId: Long,  categoryId)
PUT     /clients/:id/sites/:siteId/categories/:categoryId/products/:productId     controllers.ProductController.updateProduct(id, siteId: Long, categoryId, productId, checked: java.lang.Boolean )
PUT     /clients/:id/sites/:siteId/categories/:categoryId/products                controllers.ProductController.updateProducts(id, siteId: Long, categoryId, checked: java.lang.Boolean)

# Category operations
GET     /clients/:id/categories                          controllers.CategoryController.getCategories(id)

# PriceList operations
GET    /client/:id/sites/:siteId/formats/:format/pricelist              controllers.PriceListController.getPriceList( id, siteId:Long, format )
POST   /client/:id/sites/:siteId/formats/:format/pricelist              controllers.PriceListController.refreshPriceList( id, siteId:Long, format )
GET    /client/:id/formats                                              controllers.PriceListController.getPriceListFormats( id )

# Site operations
GET    /clients/:id/sites                                               controllers.ProductGroupController.getSites( id )
POST   /clients/:id/sites                                               controllers.ProductGroupController.addSite( id )
DELETE /clients/:id/sites/:siteId                                       controllers.ProductGroupController.removeSite( id, siteId:Long )
PUT /clients/:id/sites/:siteId                                          controllers.ProductGroupController.updateSite( id, siteId:Long, resourceSiteId: Long, operationName )

POST /authentication                                                    controllers.LoginController.authentication()
POST /logout                                                            controllers.LoginController.logout()
